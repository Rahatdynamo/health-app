<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/blue"/>
        </shape>
    </item>
    <item android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="-100dp">
        <shape android:shape="oval">
            <solid android:color="@color/blue"/>
            <stroke
                android:color="#AEACAC"
                android:width="15dp"/>
        </shape>
    </item>
</layer-list>